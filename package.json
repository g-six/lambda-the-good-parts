{
    "name": "titanic-sheep",
    "version": "1.0.0",
    "description": "He-man",
    "main": "index.js",
    "scripts": {
        "commit": "npx git-cz",
        "build:zip": "tsc && npm run zippit",
        "dev": "nodemon",
        "test": "echo \"Error: no test specified\" && exit 1",
        "precommit": "lint-staged",
        "remove:module": "npm run remove:zipfile && npm run remove:compiled",
        "remove:compiled": "rimraf ./dist/$MODULE",
        "remove:zipfile": "rimraf ./dist/$MODULE-api.zip",
        "zippit": "zip -jr ./dist/$MODULE-api ./dist/$MODULE/",
        "zip:lambda": "npm run remove:module && npm run build:zip"
    },
    "keywords": [
        "kastle",
        "node",
        "typescript",
        "lambda"
    ],
    "lint-staged": {
        "*.js": [
            "npx prettier",
            "git add"
        ]
    },
    "author": "g-six",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@types/node": "^11.9.2",
        "git-cz": "^1.8.0",
        "husky": "^1.3.1",
        "jest": "^24.1.0",
        "lint-staged": "^8.1.3",
        "nodemon": "^1.18.10",
        "prettier": "^1.16.4",
        "pretty-quick": "^1.10.0",
        "rimraf": "^2.6.3",
        "ts-node": "^8.0.2",
        "tsconfig-paths": "^3.8.0",
        "typescript": "^3.3.3"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
